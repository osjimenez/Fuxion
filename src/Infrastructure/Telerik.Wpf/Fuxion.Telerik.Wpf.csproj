<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows;net7.0-windows;net8.0-windows</TargetFrameworks>
		<UseWPF>true</UseWPF>
		<Title>Fuxion Shell</Title>
		<PackageId>Fuxion.Telerik.Wpf</PackageId>
		<Description>Fuxion Shell</Description>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
		<PackageReference Include="ReactiveUI.WPF" Version="19.4.1" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Telerik.Windows.Controls">
			<HintPath>$(TELERIK_WPF_PATH)\Binaries\NetCore\Telerik.Windows.Controls.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Data">
			<HintPath>$(TELERIK_WPF_PATH)\Binaries\NetCore\Telerik.Windows.Controls.Data.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Docking">
			<HintPath>$(TELERIK_WPF_PATH)\Binaries\NetCore\Telerik.Windows.Controls.Docking.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.GridView">
			<HintPath>$(TELERIK_WPF_PATH)\Binaries\NetCore\Telerik.Windows.Controls.GridView.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Navigation">
			<HintPath>$(TELERIK_WPF_PATH)\Binaries\NetCore\Telerik.Windows.Controls.Navigation.dll</HintPath>
		</Reference>

	</ItemGroup>

	<ItemGroup>
		<Page Update="Views\ShellWindow.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Compile Update="Views\ShellWindow.xaml.cs">
			<DependentUpon>ShellWindow.xaml</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Properties\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Core\Application\Fuxion.Application.csproj" />
	</ItemGroup>

</Project>