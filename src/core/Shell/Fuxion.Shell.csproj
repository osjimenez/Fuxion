<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>

		<Title>Fuxion Shell</Title>
		<PackageId>Fuxion.Shell</PackageId>
		<Description>Fuxion Shell</Description>
	</PropertyGroup>

	<Target Name="WorkaroundNetStandard" AfterTargets="ResolvePackageAssets">
		<ItemGroup>
			<TransitiveFrameworkReference Remove="NETStandard.Library" />
		</ItemGroup>
	</Target>

	<ItemGroup>
		<None Remove="Views\ShellWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ReactiveUI.WPF" Version="11.5.35" />
		<PackageReference Include="Telerik.Windows.Controls.Data.for.Wpf" Version="2019.3.1023" />
		<PackageReference Include="Telerik.Windows.Controls.Docking.for.Wpf" Version="2019.3.1023" />
		<PackageReference Include="Telerik.Windows.Controls.GridView.for.Wpf" Version="2019.3.1023" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Application\Fuxion.Application.csproj" />
		<ProjectReference Include="..\Fuxion\Fuxion.csproj" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Resources\Strings.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
			<LastGenOutput>Strings.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<Compile Update="Resources\Strings.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Strings.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<Page Update="Views\ShellWindow.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Compile Update="Views\ShellWindow.xaml.cs">
			<DependentUpon>ShellWindow.xaml</DependentUpon>
		</Compile>
	</ItemGroup>

</Project>