<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<Title>Fuxion Shell</Title>
		<PackageId>Fuxion.Shell</PackageId>
		<Description>Fuxion Shell</Description>
	</PropertyGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>
	
	<ItemGroup>
		<None Remove="Views\ShellWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
		<PackageReference Include="ReactiveUI.WPF" Version="18.3.1" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="Telerik.Windows.Controls">
			<HintPath>$(TelerikInstallDir)\Binaries\WPF60\Telerik.Windows.Controls.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Data">
			<HintPath>$(TelerikInstallDir)\Binaries\WPF60\Telerik.Windows.Controls.Data.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Docking">
			<HintPath>$(TelerikInstallDir)\Binaries\WPF60\Telerik.Windows.Controls.Docking.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.GridView">
			<HintPath>$(TelerikInstallDir)\Binaries\WPF60\Telerik.Windows.Controls.GridView.dll</HintPath>
		</Reference>
		<Reference Include="Telerik.Windows.Controls.Navigation">
			<HintPath>$(TelerikInstallDir)\Binaries\WPF60\Telerik.Windows.Controls.Navigation.dll</HintPath>
		</Reference>
		
	</ItemGroup>

	<ItemGroup>
		<Page Update="Views\ShellWindow.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Compile Update="Views\ShellWindow.xaml.cs">
			<DependentUpon>ShellWindow.xaml</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Properties\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Application\Fuxion.Application.csproj" />
	</ItemGroup>

</Project>