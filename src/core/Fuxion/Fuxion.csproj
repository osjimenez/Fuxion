<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Title>Fuxion</Title>
		<PackageId>Fuxion</PackageId>
		<Description>Fuxion library</Description>
	</PropertyGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="\"/>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Resources\Strings.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Strings.resx</DependentUpon>
		</Compile>
		<EmbeddedResource Update="Resources\Strings.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
			<LastGenOutput>Strings.Designer.cs</LastGenOutput>
		</EmbeddedResource>
		<Compile Update="Reflection\TypeKeyPodBuilder.cs">
			<DependentUpon>TypeKeyPod.cs</DependentUpon>
		</Compile>
		<Compile Update="PodBuilder.cs">
			<DependentUpon>Pod.cs</DependentUpon>
		</Compile>
		<Compile Update="SemanticVersionException.cs">
		  <DependentUpon>SemanticVersion.cs</DependentUpon>
		</Compile>
		<Compile Update="SemanticVersionIdentifier.cs">
		  <DependentUpon>SemanticVersion.cs</DependentUpon>
		</Compile>
		<Compile Update="SemanticVersionIdentifierCollection.cs">
		  <DependentUpon>SemanticVersion.cs</DependentUpon>
		</Compile>
		<Compile Update="Reflection\UriKeyException.cs">
		  <DependentUpon>UriKey.cs</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All"/>
		<PackageReference Include="Microsoft.Extensions.Logging.Configuration" Version="8.0.0-preview.5.23280.8"/>
		<PackageReference Include="Semver" Version="3.0.0-beta.0" />
		<PackageReference Include="System.Text.Json" Version="8.0.0-preview.5.23280.8"/>
	</ItemGroup>


	<ItemGroup>
		<Folder Include="Text\Json\Nodes\"/>
	</ItemGroup>

</Project>
