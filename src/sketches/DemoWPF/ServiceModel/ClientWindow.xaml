<Window x:Class="DemoWpf.ServiceModel.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf.ServiceModel"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="300">
	<StackPanel>
		<TextBlock Text="Host"/>
		<TextBox Text="{Binding Host}" />
		<TextBlock Text="Port"/>
		<TextBox Text="{Binding Port}" />
		<Button Click="Button_Click" Content="Conectar"/>
	</StackPanel>
</Window>
