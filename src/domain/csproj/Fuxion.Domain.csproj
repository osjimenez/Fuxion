<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net45;net471</TargetFrameworks>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<RootNamespace>Fuxion</RootNamespace>
		<DebugType>embedded</DebugType>
		<DebugSymbols>true</DebugSymbols>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutputPath>..\..\.build\NuGet\Fuxion.Domain\out~</OutputPath>
		<Optimize>false</Optimize>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\..\.build\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
		<PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
		<Compile Update="Properties\ProjectAssemblyInfo.cs">
			<SubType>Code</SubType>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\core\csproj\Fuxion.csproj" />
	</ItemGroup>

</Project>
